generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int    @id @default(autoincrement())
  name       String
  rooms      Room[]
  pluginInstanceHosting PluginInstance[] @relation("PluginInstanceHosting")
  pluginInstanceParticipating PluginInstance[] @relation("PluginInstanceParticipating")
}

model Room {
  id         Int         @id @default(autoincrement()) //change to sequence() for cockroachdb
  code       String //join code?
  users      User[] //all users
  pluginInstances PluginInstance[]
}

model Plugin {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  pluginInstances PluginInstance[]
}

model PluginInstance {
  id          Int         @id @default(autoincrement())

  positionX   Int
  positionY   Int

  data        Json?

  plugin      Plugin @relation(fields: [pluginId], references: [id])
  pluginId    Int

  room        Room @relation(fields: [roomId], references: [id])
  roomId      Int

  host        User? @relation("PluginInstanceHosting", fields: [hostId], references: [id])
  hostId      Int?

  users       User[] @relation("PluginInstanceParticipating")
}
